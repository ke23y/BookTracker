<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.etta.booktracker">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".ToReadActivity"
                android:label="@string/title_activity_to_read"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".ReadingActivity"
                android:label="@string/title_activity_reading"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".FinishedActivity"
                android:label="@string/title_activity_finished"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".dialogues.DialogueFinished">
        </activity>
        <activity
                android:name=".SearchActivity"
                android:label="@string/title_activity_search"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>